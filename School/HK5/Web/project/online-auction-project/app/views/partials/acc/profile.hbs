<div class="row py-2 d-flex justify-content-center">
    <div class="offset-0">
        <h2>Profile</h2>
        {{#equal user.type 0}}
        <div class="form-group">
            <button class="btn btn-primary" onclick="upgrade()">Upgrade</button>
        </div>
        {{/equal}}
        {{#equal user.type 1}}
        <div class="form-group">
            <button class="btn btn-secondary">Waiting</button>
        </div>
        {{/equal}}
        {{#equal user.type 2}}
        <div class="form-group">
            <button class="btn btn-success">Upgraded</button>
        </div>
        {{/equal}}
        <div class="form-group">
            <h4>Username:</h4>
            <p>{{user.name}}</p>
        </div>
        <div class="form-group">
            <h4>Password:</h4>
            <p>*********</p>
        </div>
        <div class="form-group">
            <button class="btn btn-success m-1" onclick="cf('#passModal')">Change password</button>
        </div>
        <div class="form-group">
            <h4>Email:</h4>
            <input id="email" type="text" value="{{user.email}}">
        </div>
        <div class="form-group">
            <h4>First</h4>
            <input id="first" type="text" value="{{user.first}}">
            <h4>Last</h4>
            <input id="last" type="text" value="{{user.last}}">
        </div>
        <div class="form-group">
            <button class="btn btn-success" onclick="editAcc()">Submit</button>
        </div>
    </div>
</div>

<div id="passModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Change password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="close" onclick="cm('#passModal')">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="username">Enter current password</label>
                    <input type="text" class="form-control" id="password">
                </div>
                <div class="form-group">
                    <label for="password">Enter new password</label>
                    <input type="password" class="form-control" id="newpass">
                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <button class="btn btn-success" onclick="editPass()">Confirm</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"
                        onclick="cm('#passModal')">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="rsModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="rsTitle" class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="cm('#rsModal')">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="rsBody" class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal" onclick="cm('#rsModal')">Ok</button>
            </div>
        </div>
    </div>
</div>