<div class="row py-2 d-flex justify-content-center">
    <div class="col">
        <div class="card">
            <div class="row py-2">
                <div class="col-6">
                    <div class="containerSlide">
                        <div class="mySlide">
                            <img class=" card-img-top" src="/images/sp/{{item.id}}/main.jpg" alt="main"
                                style="width: 100%;">
                        </div>
                        <div class="mySlide">
                            <img class=" card-img-top" src="/images/sp/{{item.id}}/1.jpg" alt="1" style="width: 100%;">
                        </div>
                        <div class="mySlide">
                            <img class=" card-img-top" src="/images/sp/{{item.id}}/2.jpg" alt="2" style="width: 100%;">
                        </div>

                        <div class="row">
                            <div class="col-4">
                                <img class="demoSlide cursorSlide" src="/images/sp/{{item.id}}/main.jpg"
                                    style="width: 100%;" onclick="currentSlide(1)" alt="main">
                            </div>
                            <div class="col-4">
                                <img class="demoSlide cursorSlide" src="/images/sp/{{item.id}}/1.jpg"
                                    style="width: 100%;" onclick="currentSlide(2)" alt="1">
                            </div>
                            <div class="col-4">
                                <img class="demoSlide cursorSlide" src="/images/sp/{{item.id}}/2.jpg"
                                    style="width: 100%;" onclick="currentSlide(3)" alt="2">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <div class="card-body">
                        <h5 class="card-title">{{item.name}}</h5>
                        <p class="card-text">Seller: **** {{item.sname}}</p>
                        <p class="card-text">Seller rate: {{item.srate}}</p>
                        {{#if item.n}}
                        <p class="card-text">Holder: **** {{item.bname}}</p>
                        <p class="card-text">Holder rate: {{item.brate}}</p>
                        {{/if}}
                        {{#if item.cost2}}
                        <p class="card-text">Max bid: {{item.cost2}}</p>
                        {{/if}}
                        {{#unless item.status}}
                        <p>Your bid:</p>
                        <input id="bid" type="text">
                        <button type="btn btn-success" onclick="cf('#bidModal')">PLACE
                            BID</button>
                        {{/unless}}
                    </div>
                    <div class="card-footer">
                        <p class="card-text text-secondary">Start: {{time start 'Do MMM YYYY'}} </p>
                        <p id="i{{item.id}}" class="text-danger font-weight-bold">
                            <script src="/javascripts/script.js"></script>
                            <script>dayleft('i{{item.id}}', '{{item.end}}');</script>
                        </p>
                        {{#if item.n}}
                        <p class="card-text font-weight-bold">
                            {{item.price}} VND
                            <span class="font-weight-light text-secondary"> {{item.n}} bids</span>
                        </p>
                        {{else}}
                        <p class="card-text font-weight-bold">{{item.cost}} VND</p>
                        {{/if}}
                    </div>
                    {{#if wl}}
                    <button id="ib{{item.id}}" onclick="rm(this, {{item.id}})" class="btn btn-danger float-right"
                        style="position: absolute; right: 20px; bottom: 20px;">remove</button>
                    {{else}}
                    <button id="ib{{item.id}}" onclick="add(this, {{item.id}})" class="btn btn-success float-right"
                        style="position: absolute; right: 20px; bottom: 20px;">add</button>
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="row py-2">
            <div class="col">
                <div class="card">
                    {{#if his}}
                    <div class="col-12">
                        <h3>History:</h3>
                        <table class="table table-bordered">
                            <tr>
                                <th>Date</th>
                                <th>Bidder</th>
                                <th>Price</th>
                            </tr>
                            {{#his}}
                            <tr>
                                <td>{{time create 'Do MMM YYYY, hh:mm'}}</td>
                                <td>**** {{first}}</td>
                                <td>{{cost}}</td>
                            </tr>
                            {{/his}}
                        </table>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="row py-2">
            <div class="col">
                <div class="card">
                    <p class="card-text">Description: {{item.text}}</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row py-2 d-flex justify-content-center">
    <div class="col-12">
        <h3>Items similar:</h3>
    </div>
    {{#items}}
    <div class="col-3 p-3">
        <a href="/pro/{{id}}" style="text-decoration: none;">
            <div class="card mb-3 sd h-100 text-dark">
                <script src="/javascripts/script.js"></script>
                <script>newitem('{{start}}', 10);</script>
                <img class=" card-img-top" src="/images/sp/{{id}}/1.jpg" alt="Card image cap" height="200">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    {{#if cost2}}
                    <p class="card-text">Max bid: {{cost2}} VND</p>
                    {{/if}}
                    {{#if n}}
                    <p class="card-text">Holder: **** {{bname}}</p>
                    {{/if}}
                </div>
                <div class="card-footer">
                    <p class="card-text text-secondary">Starts {{time start 'Do MMM YYYY'}}</p>
                    <p id="t{{id}}" class="card-text text-danger font-weight-bold">
                        <script src="/javascripts/script.js"></script>
                        <script>dayleft('t{{id}}', '{{end}}');</script>
                    </p>
                    {{#if n}}
                    <p class="card-text font-weight-bold">{{price}} VND
                        <span class="font-weight-light text-secondary">{{n}} bids</span>
                    </p>
                    {{else}}
                    <p class="card-text font-weight-bold">{{cost}} VND</p>
                    {{/if}}
                </div>
            </div>
        </a>
        {{#if wl}}
        <button id="ib{{id}}" onclick="rm(this, {{id}})" class="btn btn-danger float-right"
            style="position: absolute; right: 20px; bottom: 20px;">remove</button>
        {{else}}
        <button id="ib{{id}}" onclick="add(this, {{id}})" class="btn btn-success float-right"
            style="position: absolute; right: 20px; bottom: 20px;">add</button>
        {{/if}}
    </div>
    {{/items}}
</div>

<div id="bidModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Alert!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="cm('#bidModal')">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary"
                    onclick="bidCK({{item.id}}, {{#if item.n}}{{item.price}}{{else}}{{item.cost}}{{/if}}, {{user.id}})">OK</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal"
                    onclick="cm('#bidModal')">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div id="rsModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="rsTitle" class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="cm('#rsModal')">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="rsBody" class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal" onclick="cm('#rsModal')">Ok</button>
            </div>
        </div>
    </div>
</div>