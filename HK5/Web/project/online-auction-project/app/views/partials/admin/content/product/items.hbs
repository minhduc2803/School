{{#each products}}
    <div class="col-2">
        <a href="/admin/product/{{cat}}/{{subcat}}/{{id}}" style="text-decoration: none;">
            <div class="card mb-3 sd h-100 text-dark">
                <script src="#"></script>
                <script>newitem('{{start}}', 10);</script>
                <img class=" card-img-top" src="/images/sp/{{id}}/thumb.jpg" alt="Card image cap" height="200">
                <div class="card-body">
                    <h5 class="card-title">Title: {{name}}</h5>
                
                    <p class="card-text">Cost: {{cost}}</p>
                    <p class="card-text">Seller: {{seller}}</p>
                          
                    <p class="card-text">Start: {{time start 'Do MMM YYYY'}} </p>
                </div>
                <div class="card-footer">
                    <p id="t{{id}}" class="text-danger font-weight-bold"></p>
                    <script src="/javascripts/script.js"></script>
                    <script>timeleft('t{{id}}', '{{end}}');</script>
                </div>
            </div>
        </a>
    </div>
    {{/each}}